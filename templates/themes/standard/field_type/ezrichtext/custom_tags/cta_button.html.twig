{% set fontSize = params.size == "default" ? "12px" : params.size == "small" ? "8px" : "16px" %}
{% set backgroundColor = params.style == "primary" ? "mediumblue" : params.style == "secondary" ? "silver" : "white" %}
<style>
    a.button {
        -webkit-appearance: button;
        -moz-appearance: button;
        appearance: button;

        text-decoration: none;
        color: initial;
        font-size: {{ fontSize }};
        background-color: {{ backgroundColor }};
    }
</style>
<a class="button" href="{{ params.link }}" >
    {{ content }}
</a>